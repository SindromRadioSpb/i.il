# .env.example — Environment variables (NO SECRETS)

# =========================
# Web (apps/web)
# =========================

# Base URL for Worker API (local dev usually Wrangler dev)
PUBLIC_API_BASE_URL=http://127.0.0.1:8787

# Optional: base URL used for generating canonical links in web (if needed)
PUBLIC_SITE_BASE_URL=http://localhost:3000


# =========================
# Worker (apps/worker)
# =========================

# Enable/disable cron execution logic (cron triggers still invoke handler, but it may no-op)
CRON_ENABLED=false

# Enable/disable Facebook posting
FB_POSTING_ENABLED=false

# Translation provider selection: google|deepl|none
TRANSLATION_PROVIDER=google

# ---- Google Cloud Translate (if used) ----
# NOTE: Do NOT store credentials JSON in repo. Use Wrangler secrets in prod.
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_LOCATION=global

# For local dev only (optional) — recommended to use a secret manager instead.
# GOOGLE_APPLICATION_CREDENTIALS_JSON=

# ---- DeepL (if used) ----
# DEEPL_API_KEY=

# ---- Facebook (posting to our own Page) ----
FACEBOOK_PAGE_ID=
# FACEBOOK_PAGE_ACCESS_TOKEN=   # secret: set via wrangler secret put

# Optional: used for additional metadata or app-level config
FACEBOOK_APP_ID=

# =========================
# Safety & admin
# =========================

# Admin endpoints (dev only). In prod keep disabled.
ADMIN_ENABLED=false
# ADMIN_SHARED_SECRET=          # secret

# =========================
# Tuning (defaults can be overridden)
# =========================

# Cron interval assumptions (minutes) used for lock TTL calculations and logging
CRON_INTERVAL_MIN=10

# Global cap on new items processed per run
MAX_NEW_ITEMS_PER_RUN=25

# Summary generation target lengths (RU chars; can be refined)
SUMMARY_TARGET_MIN=400
SUMMARY_TARGET_MAX=700
